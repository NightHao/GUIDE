# Research_CODE API Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
DEBUG=false
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.0
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300

# Graph Processing Configuration
DEFAULT_SUBGRAPH_DISTANCE=1
DEFAULT_GRAPH_PATH=./data/output/optimized_entity_graph.json

# Evaluation Configuration
EVAL_MODEL=gpt-4.1

# Monitoring Configuration (for production)
GRAFANA_ADMIN_PASSWORD=your_secure_password_here
GRAFANA_SECRET_KEY=your_secret_key_here

# Database Configuration (if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/research_code

# Redis Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration (for production)
# SECRET_KEY=your_secret_key_for_jwt_tokens
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS Configuration
# CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com